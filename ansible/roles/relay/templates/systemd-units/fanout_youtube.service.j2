[Unit]
Description = Fanout Youtube Stream %I
Requires = fanout@%i.target
After = fanout@%i.target

[Service]
Type = simple
ExecStart = /opt/fanout/scripts/thumbnail.py \
	--stream=%i \
	--pull_endpoint={{ relay_fanout.pull_endpoint }} \
	--youtube_stream_key={{ youtube_stream_key }}

Restart = always
RestartSec = 30s
StartLimitInterval = 0

[Install]
WantedBy = fanout@%i.target
